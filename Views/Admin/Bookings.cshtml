@model IEnumerable<RestaurantWebsite.Models.Booking>
@{
    ViewData["Title"] = "Manage Bookings";
}

<h2>Manage Bookings</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Date</th>
            <th>Time</th>
            <th>Guests</th>
            <th>Customer</th>
            <th>Table</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var booking in Model)
        {
            <tr>
                <td>@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                <td>@booking.StartTime.ToString(@"hh\:mm")</td>
                <td>@booking.NumberOfGuests</td>
                <td>@booking.Customer?.Name (@booking.Customer?.PhoneNumber)</td>
                <td>Table @booking.Table?.TableNumber</td>
                <td class="text-end">
                    <a asp-action="DeleteBooking" asp-route-id="@booking.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this booking?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>