@using Microsoft.AspNetCore.Identity
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- SEO meta tags -->
    <meta name="description" content="Tumba Bistro – a cozy Swedish café serving fresh pastries, coffee and local specialties." />
    <meta name="keywords" content="Tumba Bistro, Swedish café, pastries, coffee, restaurant" />
    <meta name="author" content="Tumba Bistro" />
    <title>@ViewData["Title"] - Tumba Bistro</title>
    <!-- Bootstrap CSS via CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Piv4xVNRyMGpqkV3sSsmM3GQItcA1PbHVz1Poc6cY4mZkOcJKWjkPVSgWdFB8YuF" crossorigin="anonymous" />
    <!-- Custom styles -->
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">Tumba&nbsp;Bistro</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Menu" asp-action="Index">Menu</a>
                        </li>
                        <li class="nav-item">
                            <!-- Updated action from Contact to Booking -->
                            <a class="nav-link" asp-controller="Home" asp-action="Booking">Booking</a>
                        </li>
                        @if (User.Identity != null && User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin</a>
                            </li>
                            <li class="nav-item">
                                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-link nav-link">Log out</button>
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">Admin Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main class="container mt-4 mb-5">
        @RenderBody()
    </main>

    <footer class="bg-light py-3 mt-auto">
        <div class="container text-center">
            <small>&copy; @DateTime.Now.Year Tumba Bistro. All rights reserved.</small>
        </div>
    </footer>

    <!-- Bootstrap JS via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-XP1+g0UZ7Okz8H0/b0gvBW14qlfLijZAFiOzqTisaNB7GuzIO0eycX58W+7X35Qc" crossorigin="anonymous"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
