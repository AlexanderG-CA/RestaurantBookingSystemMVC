@model IEnumerable<RestaurantWebsite.Models.Dish>
@{
    ViewData["Title"] = "Menu";
}

<h1 class="text-center mb-4">Our Menu</h1>

<!-- Filter form -->
<form class="row g-3 mb-4" method="get" asp-controller="Menu" asp-action="Index">
    <div class="col-md-4">
        <label for="search" class="form-label">Search</label>
        <input type="text" name="search" id="search" value="@ViewBag.Search" class="form-control" placeholder="Search dishes..." />
    </div>
    <div class="col-md-2">
        <label for="minPrice" class="form-label">Min Price</label>
        <input type="number" name="minPrice" id="minPrice" value="@ViewBag.MinPrice" class="form-control" step="0.01" />
    </div>
    <div class="col-md-2">
        <label for="maxPrice" class="form-label">Max Price</label>
        <input type="number" name="maxPrice" id="maxPrice" value="@ViewBag.MaxPrice" class="form-control" step="0.01" />
    </div>
    <div class="col-md-2 align-self-end">
        <button type="submit" class="btn btn-primary w-100">Filter</button>
    </div>
</form>

<div class="row">
    @foreach (var dish in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                @{
                    var imageUrl = string.IsNullOrEmpty(dish.ImageUrl) ? Url.Content("~/images/menu.png") : dish.ImageUrl;
                }
                <img src="@imageUrl" alt="@dish.Name" class="card-img-top" style="object-fit: cover; height: 220px;" />
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@dish.Name</h5>
                    <p class="card-text">@dish.Description</p>
                    <div class="mt-auto">
                        <span class="fw-bold">@dish.Price.ToString("F2") kr</span>
                        @if (dish.IsPopular)
                        {
                            <span class="badge bg-warning text-dark ms-2">Popular</span>
                        }
                    </div>
                </div>
            </div>
        </div>
    }
</div>