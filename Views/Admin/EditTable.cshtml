@model IEnumerable<RestaurantWebsite.Models.Table>
@{
    ViewData["Title"] = "Manage Tables";
}

<div class="container my-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center mb-3">
                <h2 class="mb-0">Manage Tables</h2>
                <a class="btn btn-primary" asp-action="CreateTable">Add New Table</a>
                
            </div>

            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0">
                    <thead>
                        <tr>
                            <th>Table Number</th>
                            <th>Capacity</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var table in Model)
                        {
                            <tr>
                                <td>@table.TableNumber</td>
                                <td>@table.Capacity</td>
                                <td class="text-end">
                                    <a asp-action="EditTable" asp-route-id="@table.Id" class="btn btn-sm btn-secondary me-2">Edit</a>
                                    <a asp-action="DeleteTable" asp-route-id="@table.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this table?');">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>