@model IEnumerable<RestaurantWebsite.Models.Booking>
@{
    ViewData["Title"] = "Manage Bookings";
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">Manage Bookings</h2>
            <div>
                <a asp-action="CreateBooking" class="btn btn-primary me-2">Add Booking</a>
                <a asp-action="Index" class="btn btn-secondary">Back to Admin Dashboard</a>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">No bookings found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Date</th>
                            <th>Time</th>
                            <th>Guests</th>
                            <th>Customer</th>
                            <th>Table</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var booking in Model)
                        {
                            <tr>
                                <td data-label="Date">@booking.BookingDate.ToString("yyyy-MM-dd")</td>
                                <td data-label="Time">@booking.StartTime.ToString(@"hh\:mm")</td>
                                <td data-label="Guests">@booking.NumberOfGuests</td>
                                <td data-label="Customer">@booking.Customer?.Name (@booking.Customer?.PhoneNumber)</td>
                                <td data-label="Table">@(booking.Table?.TableNumber != null ? booking.Table.TableNumber.ToString() : "-")</td>
                                <td data-label="Actions" class="text-end">
                                    <a asp-action="EditBooking" asp-route-id="@booking.Id" class="btn btn-sm btn-secondary me-2">Edit</a>
                                    <a asp-action="DeleteBooking" asp-route-id="@booking.Id"
                                       onclick="return confirm('Are you sure you want to delete this booking?');"
                                       class="btn btn-sm btn-danger">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>