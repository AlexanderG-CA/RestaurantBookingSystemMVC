<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content="Tumba Bistro – a cozy Swedish café serving fresh pastries, coffee and local specialties." />
    <meta name="keywords" content="Tumba Bistro, Swedish café, pastries, coffee, restaurant" />
    <meta name="author" content="Tumba Bistro" />
    <title>@ViewData["Title"] - Tumba Bistro</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body class="d-flex flex-column min-vh-100">

    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark px-3">
            <a class="navbar-brand text-light" asp-controller="Home" asp-action="Index">Tumba&nbsp;Bistro</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-light" asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="nav-item"><a class="nav-link text-light" asp-controller="Menu" asp-action="Index">Menu</a></li>
                    <li class="nav-item"><a class="nav-link text-light" asp-controller="Home" asp-action="Booking">Booking</a></li>
                    <li class="nav-item"><a class="nav-link text-light" asp-controller="Account" asp-action="Login">Admin Login</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main class="container my-4 flex-grow-1">
        @RenderBody()
    </main><

    <footer class="footer-theme py-3 mt-auto">
        <div class="container text-center">
            <small>&copy; @DateTime.Now.Year Tumba Bistro. All rights reserved.</small>
        </div>
    </footer>

    <!-- Bootstrap JS via CDN -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- jQuery and validation scripts -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>

    @RenderSection("Scripts", required: false)

</body>
</html>