@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card p-4 shadow-sm">
            <h2 class="mb-3">Admin Dashboard</h2>
            <p class="mb-4">Welcome, @User.Identity?.Name! Use the options below to manage the restaurant's data.</p>
            <div class="list-group">
                <a asp-controller="Admin" asp-action="Dishes" class="list-group-item list-group-item-action">Manage Dishes</a>
                <a asp-controller="Admin" asp-action="Bookings" class="list-group-item list-group-item-action">Manage Bookings</a>
                <a asp-controller="Admin" asp-action="Tables" class="list-group-item list-group-item-action">Manage Tables</a>
            </div>
        </div>
    </div>
</div>
