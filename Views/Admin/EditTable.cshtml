@model RestaurantWebsite.Models.Table
@{
    ViewData["Title"] = "Edit Table";
}

<h2>Edit Table</h2>

<form asp-action="EditTable" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="TableNumber" class="form-label"></label>
        <input asp-for="TableNumber" class="form-control" />
        <span asp-validation-for="TableNumber" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Capacity" class="form-label"></label>
        <input asp-for="Capacity" class="form-control" />
        <span asp-validation-for="Capacity" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Tables" class="btn btn-secondary ms-2">Cancel</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}