@model IEnumerable<RestaurantWebsite.Models.Dish>
@{
    ViewData["Title"] = "Manage Dishes";
}

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">Manage Dishes</h2>
            <div>
                <a class="btn btn-primary me-2" asp-action="CreateDish">Add New Dish</a>
                <a class="btn btn-secondary" asp-action="Index">Back to Admin Dashboard</a>
            </div>
        </div>

        @if (!Model.Any())
        {
            <div class="alert alert-info">No dishes found.</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price ($USD)</th>
                            <th>Popular</th>
                            <th class="text-end">Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var dish in Model)
                        {
                            <tr>
                                <td data-label="Name">@dish.Name</td>
                                <td data-label="Description">@dish.Description</td>
                                <td data-label="Price">@dish.Price.ToString("F2")</td>
                                <td data-label="Popular">
                                    @if (dish.IsPopular)
                                    {
                                        <span class="badge bg-success">Yes</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">No</span>
                                    }
                                </td>
                                <td data-label="Actions" class="text-end">
                                    <a asp-action="EditDish" asp-route-id="@dish.Id" class="btn btn-sm btn-secondary me-2">Edit</a>
                                    <a asp-action="DeleteDish" asp-route-id="@dish.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete this dish?');">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>