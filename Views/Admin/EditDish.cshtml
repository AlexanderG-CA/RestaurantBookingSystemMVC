@model RestaurantWebsite.Models.Dish
@{
    ViewData["Title"] = "Edit Dish";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="mb-4">Edit Dish</h2>
                <form asp-action="EditDish" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label"></label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Price (USD)</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" lang="en" />
                        <span asp-validation-for="Price" class="text-danger"></span>
                        <small class="form-text text-muted">Use format: 12.99</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsPopular" class="form-check-input" type="checkbox" />
                        <label asp-for="IsPopular" class="form-check-label"></label>
                    </div>

                    <button type="submit" class="btn btn-primary">Save Changes</button>
                    <a asp-action="Dishes" class="btn btn-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Ensure price uses period as decimal separator
        document.querySelector('input[name="Price"]').addEventListener('blur', function(e) {
            let value = e.target.value.replace(',', '.');
            e.target.value = value;
        });
    </script>
}
