@model RestaurantWebsite.Models.BookingSearchViewModel
@{
    ViewData["Title"] = "Book a Table";
}

<h1>Book a Table</h1>
<p class="mb-3">
    Use the form below to find available tables. Select a date, time and number of guests
    and click <strong>Search</strong>. Available tables will be displayed below.
</p>

<form asp-action="Index" method="post" class="mb-4">
    <div class="row g-3 align-items-end">
        <div class="col-md-3">
            <label asp-for="BookingDate" class="form-label">Date</label>
            <input asp-for="BookingDate" class="form-control" type="date" />
        </div>
        <div class="col-md-3">
            <label asp-for="StartTime" class="form-label">Time</label>
            <input asp-for="StartTime" class="form-control" type="time" />
        </div>
        <div class="col-md-3">
            <label asp-for="NumberOfGuests" class="form-label">Guests</label>
            <input asp-for="NumberOfGuests" class="form-control" type="number" min="1" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">Search</button>
        </div>
    </div>
</form>

@if (Model.AvailableTables != null)
{
    if (!Model.AvailableTables.Any())
    {
        <div class="alert alert-warning">No available tables were found for the selected time. Please try another date or time.</div>
    }
    else
    {
        <h2 class="mt-4">Available Tables</h2>
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Table #</th>
                    <th>Seats</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var table in Model.AvailableTables)
                {
                    <tr>
                        <td>@table.TableNumber</td>
                        <td>@table.Capacity</td>
                    </tr>
                }
            </tbody>
        </table>
        <p class="fst-italic">To complete your booking please call us or send an email. We look forward to welcoming you!</p>
    }
}
