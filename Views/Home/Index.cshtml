@model IEnumerable<RestaurantWebsite.Models.Dish>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Banner Section - Will be full width on desktop via CSS -->
<div class="hero-banner-section mb-5">
    <img src="~/images/Tumba Bistro.png" alt="Tumba Bistro - Café & Gastro" class="hero-banner-img" />
    <div class="banner-cta-overlay">
        <div class="banner-cta-buttons">
            <a class="btn btn-light btn-lg shadow" asp-controller="Menu" asp-action="Index">
                View Menu
            </a>
            <a class="btn btn-outline-light btn-lg shadow" asp-controller="Home" asp-action="Booking">
                Book a Table
            </a>
        </div>
    </div>
</div>

<!-- Welcome Section -->
<div class="container text-center mb-5">
    <h2 class="display-5 mb-3">Welcome to Tumba Bistro</h2>
    <p class="lead text-muted">Enjoy our Swedish café with rustic charm and Heavenly pastries.</p>
</div>

<!-- Popular Dishes Section -->
<div class="container">
    <div class="text-center mb-4">
        <h2 class="display-6 mb-3">Popular Dishes</h2>
        <p class="text-muted">Taste our customer favorites</p>
    </div>

    <div class="row g-4">
        @foreach (var dish in Model.Take(3))
        {
            <div class="col-md-4">
                <div class="card h-100 shadow-sm dish-card">
                    @if (!string.IsNullOrEmpty(dish.ImageUrl))
                    {
                        <img src="@dish.ImageUrl" class="card-img-top dish-image" alt="@dish.Name" />
                    }
                    else
                    {
                        <img src="~/images/menu.png" class="card-img-top dish-image" alt="@dish.Name" />
                    }
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">@dish.Name</h5>
                        <p class="card-text flex-grow-1">@dish.Description</p>
                        <div class="d-flex justify-content-between align-items-center mt-3">
                            <span class="badge bg-success fs-6">@dish.Price.ToString("F2") $USD</span>
                            <span class="badge bg-warning text-dark">Popular</span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    <!-- Call to Action -->
    <div class="text-center mt-5 mb-4">
        <a class="btn btn-primary btn-lg px-5" asp-controller="Menu" asp-action="Index">
            Explore Full Menu
        </a>
    </div>
</div>

