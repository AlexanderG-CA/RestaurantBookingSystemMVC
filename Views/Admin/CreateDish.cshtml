@model RestaurantWebsite.Models.Dish
@{
    ViewData["Title"] = "Add New Dish";
}

<div class="row justify-content-center">
    <div class="col-md-6 col-lg-5">
        <div class="card shadow-sm">
            <div class="card-body">
                <h2 class="mb-4">Add New Dish</h2>

                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger">
                        <ul class="mb-0">
                            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        </ul>
                    </div>
                }

                <form asp-action="CreateDish" method="post">
                    @Html.AntiForgeryToken()

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label">Name *</label>
                        <input asp-for="Name" class="form-control" required />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Description" class="form-label">Description</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Price" class="form-label">Price (USD) *</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ImageUrl" class="form-label">Image URL</label>
                        <input asp-for="ImageUrl" class="form-control" type="url" placeholder="https://example.com/image.jpg" />
                        <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        <small class="text-muted">Optional - leave blank to use default image</small>
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsPopular" class="form-check-input" type="checkbox" />
                        <label asp-for="IsPopular" class="form-check-label">Mark as Popular</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Create Dish</button>
                    <a asp-action="Dishes" class="btn btn-secondary ms-2">Cancel</a>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}