@model IEnumerable<RestaurantWebsite.Models.Dish>
@{
    ViewData["Title"] = "Home";
}

<!-- Hero section -->
<div class="row mb-4">
    <div class="col-12">
        <img src="~/images/landing.png" alt="Landing" class="img-fluid w-75 h-75 d-block mx-auto" />
    </div>
</div>

<div class="text-center mb-4">
    <h1 class="display-4">Welcome to Tumba Bistro</h1>
    <p class="lead">Enjoy our Swedish caf√© with rustic charm and Heavenly pastries.</p>
</div>

<h2 class="mb-3">Popular Dishes</h2>
<div class="row">
    @foreach (var dish in Model.Take(3))
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                @if (!string.IsNullOrEmpty(dish.ImageUrl))
                {
                    <img src="@dish.ImageUrl" class="card-img-top" alt="@dish.Name" style="object-fit: cover; height: 200px;" />
                }
                else
                {
                    <img src="~/images/menu.png" class="card-img-top" alt="@dish.Name" style="object-fit: cover; height: 200px;" />
                }
                <div class="card-body">
                    <h5 class="card-title">@dish.Name</h5>
                    <p class="card-text">@dish.Description</p>
                    <span class="badge bg-success">@dish.Price.ToString("F2") $USD</span>
                </div>
            </div>
        </div>
    }
</div>

<div class="mt-3">
    <a class="btn btn-primary" asp-controller="Menu" asp-action="Index">View Full Menu</a>
    <a class="btn btn-outline-secondary" asp-controller="Home" asp-action="Contact">Book a Table</a>
</div>